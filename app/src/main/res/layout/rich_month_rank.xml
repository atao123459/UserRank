<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <View
            android:id="@+id/view"
            android:layout_width="260dp"
            android:layout_height="25dp"
            android:layout_marginLeft="68dp"
            android:layout_marginTop="81dp"
            android:layout_marginRight="67dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageView
            android:id="@+id/iv_rank02"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginLeft="52dp"
            android:layout_marginTop="36dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view" />

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="19dp"
            android:background="@drawable/phb_phmc_no2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view"/>

        <TextView
            android:id="@+id/tv_name_02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="123234"
            app:layout_constraintEnd_toEndOf="@id/iv_rank02"
            app:layout_constraintStart_toStartOf="@+id/iv_rank02"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="200dp"
            android:textSize="13sp"
            android:textColor="#3e3e3e"
            />

        <ImageView
            android:id="@+id/iv_rank01"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="56dp"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="32dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toEndOf="@id/iv_rank02"
            app:layout_constraintTop_toBottomOf="@id/view" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="36dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/phb_phmc_no1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toEndOf="@id/iv_rank02"
            app:layout_constraintTop_toBottomOf="@id/view" />

        <TextView
            android:id="@+id/tv_name_01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="123234"
            app:layout_constraintEnd_toEndOf="@id/iv_rank01"
            app:layout_constraintStart_toStartOf="@+id/iv_rank01"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="200dp"
            android:layout_marginLeft="2dp"
            android:textSize="13sp"
            android:textColor="#3e3e3e"/>

        <ImageView
            android:id="@+id/iv_rank03"
            android:layout_width="47dp"
            android:layout_height="49dp"
            android:layout_marginStart="72dp"
            android:layout_marginLeft="72dp"
            android:layout_marginTop="44dp"
            android:textColor="#3e3e3e"
            android:textSize="13sp"
            app:layout_constraintStart_toEndOf="@id/iv_rank01"
            app:layout_constraintTop_toBottomOf="@id/view" />

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="28dp"
            android:background="@drawable/phb_phmc_no3"
            app:layout_constraintStart_toEndOf="@id/iv_rank01"
            app:layout_constraintTop_toBottomOf="@id/view"/>

        <TextView
            android:id="@+id/tv_name_03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="123234"
            app:layout_constraintEnd_toEndOf="@id/iv_rank03"
            app:layout_constraintStart_toStartOf="@+id/iv_rank03"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="200dp"
            android:textSize="13sp"
            android:textColor="#3e3e3e"/>

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/cl_head"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:lottie_autoPlay="true"
            app:lottie_fileName="data.json"
            app:lottie_imageAssetsFolder="images/"
            app:lottie_loop="true"
            />

        <TextView
            android:id="@+id/tv_rich_text02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/lottie"
            app:layout_constraintLeft_toLeftOf="@id/lottie"
            android:layout_marginBottom="135dp"
            android:layout_marginLeft="63dp"
            android:text="财富值"
            android:textSize="10sp"
            android:textColor="#96ffffff"
            />

        <TextView
            android:id="@+id/tv_rich_02"
            android:text="11111111111"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@id/lottie"
            app:layout_constraintLeft_toLeftOf="@id/lottie"
            app:layout_constraintStart_toStartOf="@id/tv_rich_text02"
            app:layout_constraintEnd_toEndOf="@id/tv_rich_text02"
            android:layout_marginBottom="115dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:text="财富值"
            android:textColor="#96ffffff"
            android:textSize="10sp"
            app:layout_constraintBottom_toTopOf="@id/tv_rich_01"
            app:layout_constraintStart_toStartOf="@id/tv_rich_01"
            app:layout_constraintEnd_toEndOf="@id/tv_rich_01"/>

        <TextView
            android:id="@+id/tv_rich_01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@id/lottie"
            app:layout_constraintRight_toRightOf="@id/lottie"
            app:layout_constraintBottom_toBottomOf="@id/lottie"
            android:text="2222222"
            android:textSize="14sp"
            android:textColor="#ffffff"
            android:layout_marginBottom="115dp"
            />

        <TextView
            android:id="@+id/tv_rich_text03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/lottie"
            app:layout_constraintRight_toRightOf="@id/lottie"
            android:layout_marginBottom="135dp"
            android:layout_marginRight="63dp"
            android:text="财富值"
            android:textSize="10sp"
            android:textColor="#96ffffff"
            />

        <TextView
            android:id="@+id/tv_rich_03"
            android:text="3333333"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@id/lottie"
            app:layout_constraintRight_toRightOf="@id/lottie"
            app:layout_constraintStart_toStartOf="@id/tv_rich_text03"
            app:layout_constraintEnd_toEndOf="@id/tv_rich_text03"
            android:layout_marginBottom="115dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rl_rank"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="335dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/cl_head">
    </androidx.recyclerview.widget.RecyclerView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:background="@drawable/bottom_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <TextView
            android:id="@+id/tv_on_day_rank"
            android:layout_width="wrap_content"
            android:layout_height="14dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="14dp"
            android:text="未上榜"
            android:textColor="#B3FFFFFF"
            android:textSize="10sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_rank_no_bg"
            android:layout_width="22dp"
            android:layout_height="16dp"
            android:text="1"
            android:textSize="12sp"
            android:textColor="#EB9200"
            android:gravity="center_horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/rank_no_bg"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_on_day_rank" />

        <ImageView
            android:id="@+id/iv_avatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="10dp"
            app:layout_constraintLeft_toRightOf="@+id/tv_on_day_rank"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_day_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="11dp"
            android:text="124565231356"
            android:textColor="#ffffff"
            android:textSize="15sp"
            app:layout_constraintLeft_toRightOf="@id/iv_avatar"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_gender"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginLeft="11.6dp"
            android:layout_marginTop="3.6dp"
            app:layout_constraintLeft_toRightOf="@id/iv_avatar"
            app:layout_constraintTop_toBottomOf="@id/tv_day_username" />

        <ImageView
            android:id="@+id/iv_icon1"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="3.6dp"
            app:layout_constraintLeft_toRightOf="@id/iv_gender"
            app:layout_constraintTop_toBottomOf="@id/tv_day_username" />

        <ImageView
            android:id="@+id/iv_icon2"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="3.6dp"
            app:layout_constraintLeft_toRightOf="@id/iv_icon1"
            app:layout_constraintTop_toBottomOf="@id/tv_day_username" />

        <ImageView
            android:id="@+id/iv_icon3"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="3.6dp"
            app:layout_constraintLeft_toRightOf="@id/iv_icon2"
            app:layout_constraintTop_toBottomOf="@id/tv_day_username" />

        <TextView
            android:id="@+id/tv_rich_value"
            android:layout_width="wrap_content"
            android:layout_height="14dp"
            android:layout_marginLeft="214.5dp"
            android:layout_marginTop="14dp"
            android:text="财富值"
            android:textColor="#B3FFFFFF"
            android:textSize="10sp"
            app:layout_constraintLeft_toRightOf="@id/iv_avatar"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_rich_num_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="201dp"
            android:text="45527891"
            android:textColor="#ffffff"
            android:textSize="14sp"
            app:layout_constraintLeft_toRightOf="@id/iv_avatar"
            app:layout_constraintTop_toBottomOf="@id/tv_rich_value" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>