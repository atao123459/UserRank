<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:background="@drawable/ccyy_sy_bd_icon_100"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/nvb_icon_back_white"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="32dp"
            android:id="@+id/iv_back"
            />

        <TextView
            android:id="@+id/tv_rich"
            android:layout_width="54dp"
            android:layout_height="25dp"
            app:layout_constraintStart_toEndOf="@+id/iv_back"
            app:layout_constraintTop_toTopOf="@id/iv_back"
            android:text="财富榜"
            android:layout_marginLeft="81dp"
            android:gravity="center_horizontal"
            android:textColor="#ffffff"
            android:textSize="18sp"
            />

        <ImageView
            android:id="@+id/iv_rich_title_bg"
            android:layout_width="26dp"
            android:layout_height="12dp"
            app:layout_constraintStart_toStartOf="@id/tv_rich"
            app:layout_constraintEnd_toEndOf="@id/tv_rich"
            app:layout_constraintTop_toBottomOf="@id/tv_rich"
            android:src="@drawable/ccyy_hg"
            />

        <ImageView
            android:id="@+id/iv_charm_title_bg"
            android:layout_width="26dp"
            android:layout_height="12dp"
            app:layout_constraintStart_toStartOf="@id/tv_charm"
            app:layout_constraintEnd_toEndOf="@id/tv_charm"
            app:layout_constraintTop_toBottomOf="@id/tv_charm"
            android:src="@drawable/ccyy_hg"
            />

        <TextView
            android:id="@+id/tv_charm"
            android:layout_width="54dp"
            android:layout_height="25dp"
            app:layout_constraintStart_toEndOf="@+id/tv_rich"
            app:layout_constraintTop_toTopOf="@id/tv_rich"
            android:text="魅力榜"
            android:layout_marginLeft="52dp"
            android:gravity="center_horizontal"
            android:textColor="#ffffff"
            android:textSize="18sp"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>